{
  "name": "@next/monorepo",
  "version": "1.0.0",
  "description": "Federated Modules Production Grade boilerplate for Next",
  "scripts": {
    "lint-all": "npm run lint --ws --if-present",
    "tsc-all": "npm run tsc --ws --if-present",
    "test-all": "npm run test --ws --if-present",
    "build-all": "npm run build --ws --if-present",
    "docs": "npm run docs -ws --if-present",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "app-shell:lint": "npm run lint -w @next/app-shell --if-present", 
    "app-shell:build": "npm run build -w @next/app-shell --if-present", 
    "app-shell:test": "npm run test -w @next/app-shell --if-present", 
    "app-shell:serve": "npm run serve -w @next/app-shell --if-present",  
    "app-shell:dev": "npm run dev -w @next/app-shell --if-present", 
    "app-shell:ratchet": "npm run jest-ratchet -w @next/app-shell --if-present",
    "header:build": "npm run build -w @next/header --if-present",
    "header:lint": "npm run lint -w @next/header --if-present",
    "header:test": "npm run test -w @next/header --if-present",
    "header:ratchet": "npm run jest-ratchet -w @next/header --if-present",
    "federate-component:build": "npm run build -w @next/federate-component --if-present",
    "federate-component:lint": "npm run lint -w @next/federate-component --if-present",
    "federate-component:test": "npm run build-watch -w @next/federate-component --if-present",
    "federate-component:ratchet": "npm run jest-ratchet -w @next/federate-component --if-present",
    "next-ui-components/text:build": "npm run build -w @next-ui-components/text --if-present",
    "next-ui-components/text:lint": "npm run lint -w @next-ui-components/text --if-present",
    "next-ui-components/text:test": "npm run test -w @next-ui-components/text --if-present",
    "next-ui-components/text:ratchet": "npm run jest-ratchet -w @next-ui-components/text --if-present",
    "constants:build": "npm run build -w @next/constants --if-present",
    "logger:build": "npm run build -w @next/core-logger --if-present",
    "logger:lint": "npm run lint -w @next/core-logger --if-present",
    "logger:test": "npm run build-watch -w @next/core-logger --if-present",
    "middlewares:build": "npm run build -w @next/middlewares --if-present",
    "middlewares:lint": "npm run lint -w @next/middlewares --if-present",
    "middlewares:test": "npm run build-watch -w @next/middlewares --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amido/Next.Ecommerce.UI.Federated.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amido/Next.Ecommerce.UI.Federated/issues"
  },
  "homepage": "https://github.com/amido/Next.Ecommerce.UI.Federated#readme",
  "workspaces": [
    "./libs/framework/constants",
    "./libs/framework/eslint-config",
    "./libs/framework/prettier-config",
    "./libs/framework/federate-component",
    "./libs/framework/logger",
    "./libs/framework/middlewares",
    "./libs/ui-components/Text",
    "./tools/CLI",
    "./apps/AppShell",
    "./apps/MFE/Header"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@next/eslint-config": "1.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "cz-conventional-changelog": "^3.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier-eslint": "^13.0.0",
    "rollup-plugin-delete": "^2.0.0",
    "typedoc": "^0.22.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "skipScope": false,
      "defaultScope": "*"
    }
  }
}
