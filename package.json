{
  "name": "@next/monorepo",
  "version": "1.0.0",
  "description": "Federated Modules Production Grade boilerplate for Next",
  "scripts": {
    "host:eslint": "npm run lint --workspace='@next/host'",
    "remote:eslint": "npm run lint --workspace='@next/remote'",
    "host:test": "npm run test --workspace='@next/host'",
    "remote:test": "npm run test --workspace='@next/remote'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amido/Next.Ecommerce.UI.Federated.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amido/Next.Ecommerce.UI.Federated/issues"
  },
  "homepage": "https://github.com/amido/Next.Ecommerce.UI.Federated#readme",
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
