{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "es3",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./lib",
    "paths": {
      "@mockData/*": ["__mocks__/*"],
      "@app/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "server/**/*.ts", "**/*.cy.ts"],
  "include": ["./src"]
}